<!DOCTYPE html>
<html>
  <head>
    <title>NrChallenge</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <% flash.each do |type, msg| %>
    <div class="flash-message">
      <%= msg %>
    </div>
  <% end %>
  <body>
    <%= yield %>
  </body>
</html>
